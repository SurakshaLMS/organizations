# Database
DATABASE_URL="postgresql://username:password@localhost:5432/organization_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Application Configuration
PORT=3000
NODE_ENV="development"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# User Sync Configuration
USER_SYNC_ENABLED=true
USER_SYNC_CRON="0 2 * * *"  # Daily at 2 AM

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"
CORS_METHODS="GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS"
CORS_CREDENTIALS=true

# SECURE FILE UPLOAD CONFIGURATION (IMAGES & PDFs ONLY)
# ===============================================================

# File Storage Configuration
FILE_BASE_URL="http://localhost:3000"  # Base URL for serving uploaded files

# Security Limits (Environment-based configuration)
MAX_FILE_SIZE=10485760                 # Maximum file size in bytes (10MB default)
MAX_FILES_PER_UPLOAD=5                 # Maximum number of files per upload request

# File Type Security - RESTRICTED TO IMAGES AND PDFs ONLY
# CRITICAL: Only images (jpg, jpeg, png, gif, heic, heif) and PDFs are allowed
ALLOWED_MIME_TYPES="image/jpeg,image/jpg,image/png,image/gif,image/heic,image/heif,application/pdf"

ALLOWED_EXTENSIONS=".jpg,.jpeg,.png,.gif,.heic,.heif,.pdf"

# File Validation
ENABLE_FILE_VALIDATION=true            # Enable/disable file type validation (RECOMMENDED: true)

# Google Cloud Storage Configuration (for serverless deployment)
GCS_PROJECT_ID="your-gcs-project-id"
GCS_BUCKET_NAME="your-gcs-bucket-name"
GCS_PRIVATE_KEY_ID="your-private-key-id"
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----"
GCS_CLIENT_EMAIL="your-service-account@your-project.iam.gserviceaccount.com"
GCS_CLIENT_ID="your-client-id"
